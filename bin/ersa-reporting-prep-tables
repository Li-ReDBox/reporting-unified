#!/usr/bin/env python3
"""Creates tables for unified api applications."""

# pylint: disable=invalid-name
import os
import sys

config = os.getenv('APP_SETTINGS', None)
if config is None:
    print("Please set config file in environment variable APP_SETTINGS")
    sys.exit(1)

if len(sys.argv) != 2:
    print("args: package. e.g. nova")
    sys.exit(1)

package = 'unified.models.' + sys.argv[1]

# enable running from bin or above bin directory of this package
sys.path.extend(('.', '..'))

module = __import__(package)
module.db.create_all()
